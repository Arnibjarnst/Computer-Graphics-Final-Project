    <bsdf type="diffuse">
      <texture type="image_texture_simple" name="albedo">
        <string name="filename" value="./checkerboard.jpg"/>
        <vector name="scale" value="50, 50"/>
      </texture>
    </bsdf>
  </mesh>

  <mesh type="obj">
    <string name="filename" value="../meshes/light.obj"/>

    <transform name="toWorld">
      <translate value="0, 3, 0"/>
    </transform>
    <emitter type="area">
      <color name="radiance" value="200 200 200"/>
    </emitter>
  </mesh>
</scene>
