	<mesh type="obj">
		<string name="filename" value="./cube.obj"/>
		<transform name="toWorld">
			<scale value="100, 1, 200"/>
		</transform>

		<bsdf type="diffuse">
			<texture type="image_texture_simple" name="albedo">
				<string name="filename" value="./checkerboard.jpg"/>
				<vector name="scale" value="1, 1"/>
			</texture>
		</bsdf>
	</mesh>

  <mesh type="obj">
    <string name="filename" value="../meshes/light.obj"/>

	<transform name="toWorld">
		<scale value="1000.0, 1000.0, 1000.0"/>
		<translate value="0, 100, 0"/>
	</transform>
    <emitter type="area">
      <color name="radiance" value="300 300 300"/>
    </emitter>
  </mesh>
</scene>
